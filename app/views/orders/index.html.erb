<% provide(:title, "Your Orders") %>

<p id="notice"><%= notice %></p>

<h1>Orders Placed</h1>
<% @orders.each do |order| %>
	<div class="jumbotron">
		<h2><link_to root_path, '#'><%= order.item.name %></h2>
		<p><small><%= order.item.description[0..49]+'...' %></small></p>
		<p><b>Price: $</b><%= order.item.price %></p>
		<p><b>Quantity:</b><%= order.quantity %></p>
		<% if order.is_rated %>
			<p>Yay! You already rated this item</p>
		<% else %>
			<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#ratingForm", aria-expanded="false", aria-controls="ratingFrom">Rate this Item</button>
			<div class="row">
				<div class="card card-body" id="ratingForm">
					<%= render 'ratings/new' %>
				</div>
			</div>
		<% end %>
	</div>
	<hr>
<% end %>
